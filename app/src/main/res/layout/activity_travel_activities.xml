<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/download"
    >
    <TextView
        android:id="@+id/kampList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ETKİNLİKLER"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <ImageView
            android:id="@+id/swimImage"
            android:layout_width="160dp"
            android:layout_height="115dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentLeft="true"

            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/swim" />

        <ImageView
            android:id="@+id/campImage"
            android:layout_width="160dp"
            android:layout_height="115dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            app:srcCompat="@mipmap/camp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/swimButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/blue"
            android:text="YÜZME"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/campButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginRight="53dp"
            android:backgroundTint="@color/blue"
            android:text="KAMP"
            app:cornerRadius="15dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/antiqueImage"
            android:layout_width="160dp"
            android:layout_height="115dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentLeft="true"
            app:srcCompat="@mipmap/kent" />

        <ImageView
            android:id="@+id/boatImage"
            android:layout_width="160dp"
            android:layout_height="115dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            app:srcCompat="@mipmap/tturu" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/antiqueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/blue"
            android:text="ANTİK KENT"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/boatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="33dp"
            android:backgroundTint="@color/blue"
            android:text="TEKNE TURU"
            app:cornerRadius="15dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/suImage"
            android:layout_width="160dp"
            android:layout_height="115dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentLeft="true"
            app:srcCompat="@mipmap/su" />

        <ImageView
            android:id="@+id/parachuteImage"
            android:layout_width="160dp"
            android:layout_height="115dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            app:srcCompat="@mipmap/parachute" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/suButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="27dp"
            android:backgroundTint="@color/blue"
            android:text="SU DALIŞLARI"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/parachuteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginRight="53dp"
            android:backgroundTint="@color/blue"
            android:text="PARAŞÜT"
            app:cornerRadius="15dp" />

    </RelativeLayout>

</LinearLayout>